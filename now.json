{
  "version": 2,
  "builds": [
    {
      "src": "src/public/**",
      "use": "@now/static"
    },
    {
      "src": "src/index.js",
      "use": "@now/node-server"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "src/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/(.*)",
      "dest": "src/public/$1"
    }
  ]
}
