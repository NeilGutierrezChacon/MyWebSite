{
  "version": 2,
  "builds": [
    {
      "src": "src/public/**",
      "use": "@now/static"
    },
    {
      "src": "src/index.js",
      "use": "@now/node@canary"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "src/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/projects",
      "dest": "src/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/projects/(?<id>[^/]*)",
      "dest": "src/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/blog",
      "dest": "src/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/blog/(?<page>[^/]*)",
      "dest": "src/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/blog/post/(?<id>[^/]*)",
      "dest": "src/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/contact",
      "dest": "src/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/contact",
      "dest": "src/index.js",
      "methods": ["POST"]
    },
    {
      "src": "/admin",
      "dest": "src/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/admin",
      "dest": "src/index.js",
      "methods": ["POST"]
    },
    {
      "src": "/admin/my-profile",
      "dest": "src/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/admin/manage-projects",
      "dest": "src/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/admin/manage-projects/(?<project>[^/]*)/delete",
      "dest": "src/index.js",
      "methods": ["POST"]
    },
    {
      "src": "/admin/manage-projects/(?<project>[^/]*)/edit",
      "dest": "src/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/admin/manage-projects/(?<project>[^/]*)/edit",
      "dest": "src/index.js",
      "methods": ["POST"]
    },
    {
      "src": "/admin/manage-projects/add",
      "dest": "src/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/admin/manage-projects/add",
      "dest": "src/index.js",
      "methods": ["POST"]
    },
    {
      "src": "/admin/save-post",
      "dest": "src/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/admin/save-post",
      "dest": "src/index.js",
      "methods": ["POST"]
    },
    {
      "src": "/cookies",
      "dest": "src/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/privacy-policy",
      "dest": "src/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/user-manual",
      "dest": "src/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/legal-notice",
      "dest": "src/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/project/(?<id>[^/]*)",
      "dest": "src/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/sign-out",
      "dest": "src/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/db-test",
      "dest": "src/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/(.*)",
      "dest": "src/public/$1"
    }
  ]
}
